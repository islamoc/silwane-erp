{
  "name": "silwane-erp",
  "version": "1.0.0",
  "description": "Complete ERP System with Stock, Purchasing, Sales, Finance, Analytics and Statistics modules",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "dev-all": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "erp",
    "inventory",
    "stock",
    "purchasing",
    "sales",
    "finance",
    "analytics",
    "statistics"
  ],
  "author": "Mennouchi Islam Azeddine",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}